{
    "name": "ramajo/my-book-shelf_2025",
    "version": "1.0.0",
    "scripts": {
        "logs": "cat logs/app.log",
        "start": "docker compose up -d",
        "stop": "docker compose down",
        "test": "php vendor/bin/pest --colors=always",
        "feature": "vendor/bin/pest tests/Feature --colors=always",
        "unit": "vendor/bin/pest tests/Unit --colors=always",
        "drop": "php database/down.php && php database/migrate.php",
        "docker-app": "docker exec -it my-bookshelf-php-app-1 sh",
        "docker-db": "docker exec -it my-bookshelf-php-db-1 sh"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "authors": [
        {
            "name": "LacamJC",
            "email": "joaoramajo744@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}